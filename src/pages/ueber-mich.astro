---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SkillBadge from "../components/SkillBadge.astro";

const skills = {
  programmierung: [
    { icon: "java", label: "Java" },
    { icon: "go", label: "Go" },
    { icon: "terminal", label: "Bash/Shell" },
  ],
  betriebssysteme: [
    { icon: "macos", label: "macOS" },
    { icon: "linux", label: "Linux (Ubuntu)" },
    { icon: "windows", label: "Windows" },
  ],
  netzwerk: [
    { icon: "network", label: "Networking" },
    { icon: "security", label: "VPN (WireGuard, OpenVPN)" },
    { icon: "network", label: "Firewall Config" },
  ],
  devops: [
    { icon: "docker", label: "Docker" },
    { icon: "cloud", label: "Cloudflare" },
    { icon: "cloud", label: "Hetzner Cloud" },
  ],
  security: [
    { icon: "security", label: "Penetration Testing" },
    { icon: "security", label: "Wazuh SIEM" },
    { icon: "security", label: "TryHackMe CTFs" },
  ],
};
---

<BaseLayout title="√úber mich | Adryano Yohanna">
  <Header currentPath="/ueber-mich" />

  <main>
    <section class="about-hero">
      <div class="container">
        <h1>√úber <span class="gradient-text">mich</span></h1>
        <p class="subtitle">
          IT Student mit Leidenschaft f√ºr Netzwerke und Security
        </p>
      </div>
    </section>

    <section class="about-content">
      <div class="container">
        <div class="about-grid">
          <!-- Bio Section -->
          <div class="bio-section glass-card">
            <h2>üëã Hallo!</h2>
            <p>
              Ich bin <strong>Adryano Yohanna</strong>, Sch√ºler an der <strong
                >HTL Donaustadt</strong
              >
              im Zweig <strong>IT-Netzwerktechnologie</strong>. Aktuell befinde
              ich mich im letzten Jahr (5. Klasse) und arbeite an meiner
              Diplomarbeit.
            </p>
            <p>
              In meiner Freizeit besch√§ftige ich mich intensiv mit
              Cybersecurity, Server-Administration und verschiedenen
              Programmier-Projekten. Ich betreibe mein eigenes Homelab und
              experimentiere gerne mit neuen Technologien.
            </p>
            <p>
              Mein Ziel ist es, den <strong>Master in IT-Security</strong> zu machen
              und mich auf Cybersecurity zu spezialisieren.
            </p>
          </div>

          <!-- Certification -->
          <div class="cert-section glass-card">
            <h2>üìú Zertifizierungen</h2>
            <div class="cert-item">
              <div class="cert-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="40"
                  height="40"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <circle cx="12" cy="8" r="6"></circle>
                  <path d="M15.477 12.89L17 22l-5-3-5 3 1.523-9.11"></path>
                </svg>
              </div>
              <div class="cert-info">
                <h3>Cisco CCNA</h3>
                <p>Enterprise Networking, Security & Automation</p>
              </div>
            </div>
          </div>

          <!-- Education -->
          <div class="edu-section glass-card">
            <h2>üéì Ausbildung</h2>
            <div class="timeline">
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-content">
                  <span class="timeline-date">2020 - 2025</span>
                  <h3>HTL Donaustadt</h3>
                  <p>IT-Netzwerktechnologie</p>
                </div>
              </div>
              <div class="timeline-item">
                <div class="timeline-marker current"></div>
                <div class="timeline-content">
                  <span class="timeline-date">Aktuell</span>
                  <h3>Diplomarbeit</h3>
                  <p>
                    Verteiltes manipulationssicheres Dateiverwaltungssystem
                    (Blockchain)
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Skills Section -->
        <div class="skills-section">
          <h2 class="section-title">üõ†Ô∏è Skills & Technologien</h2>

          <div class="skills-grid">
            <div class="skill-category">
              <h3>Programmierung</h3>
              <div class="skill-badges">
                {
                  skills.programmierung.map((skill) => (
                    <SkillBadge icon={skill.icon} label={skill.label} />
                  ))
                }
              </div>
            </div>

            <div class="skill-category">
              <h3>Betriebssysteme</h3>
              <div class="skill-badges">
                {
                  skills.betriebssysteme.map((skill) => (
                    <SkillBadge icon={skill.icon} label={skill.label} />
                  ))
                }
              </div>
            </div>

            <div class="skill-category">
              <h3>Netzwerk & Server</h3>
              <div class="skill-badges">
                {
                  skills.netzwerk.map((skill) => (
                    <SkillBadge icon={skill.icon} label={skill.label} />
                  ))
                }
              </div>
            </div>

            <div class="skill-category">
              <h3>Cloud & DevOps</h3>
              <div class="skill-badges">
                {
                  skills.devops.map((skill) => (
                    <SkillBadge icon={skill.icon} label={skill.label} />
                  ))
                }
              </div>
            </div>

            <div class="skill-category">
              <h3>Security</h3>
              <div class="skill-badges">
                {
                  skills.security.map((skill) => (
                    <SkillBadge icon={skill.icon} label={skill.label} />
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  main {
    padding-top: 72px;
  }

  .about-hero {
    padding: 4rem 0;
    text-align: center;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
  }

  .about-hero h1 {
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-muted);
  }

  .about-content {
    padding: 4rem 0;
  }

  .about-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .glass-card h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .bio-section {
    grid-column: span 2;
  }

  .bio-section p {
    margin-bottom: 1rem;
  }

  .bio-section p:last-child {
    margin-bottom: 0;
  }

  /* Certification */
  .cert-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cert-icon {
    color: var(--accent-primary);
  }

  .cert-info h3 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .cert-info p {
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  /* Timeline */
  .timeline {
    position: relative;
    padding-left: 1.5rem;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--border-color);
  }

  .timeline-item {
    position: relative;
    padding-bottom: 1.5rem;
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: -1.5rem;
    top: 0.25rem;
    width: 12px;
    height: 12px;
    background: var(--bg-primary);
    border: 2px solid var(--accent-primary);
    border-radius: 50%;
    transform: translateX(-5px);
  }

  .timeline-marker.current {
    background: var(--accent-primary);
  }

  .timeline-date {
    font-size: 0.8rem;
    color: var(--accent-primary);
    font-weight: 500;
  }

  .timeline-content h3 {
    font-size: 1rem;
    margin: 0.25rem 0;
  }

  .timeline-content p {
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  /* Skills Section */
  .skills-section {
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
  }

  .section-title {
    text-align: center;
    margin-bottom: 2rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .skill-category h3 {
    font-size: 1rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .skill-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  @media (max-width: 1024px) {
    .about-grid {
      gap: 1.25rem;
    }

    .skills-grid {
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    main {
      padding-top: 80px;
    }

    .about-hero {
      padding: 3rem 0;
    }

    .subtitle {
      font-size: 1.1rem;
    }

    .about-content {
      padding: 3rem 0;
    }

    .about-grid {
      grid-template-columns: 1fr;
      margin-bottom: 3rem;
    }

    .bio-section {
      grid-column: span 1;
    }

    .skills-section {
      padding-top: 1.5rem;
    }

    .section-title {
      font-size: 1.25rem;
      margin-bottom: 1.5rem;
    }

    .skills-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    main {
      padding-top: 70px;
    }

    .about-hero {
      padding: 2rem 0;
    }

    .about-hero h1 {
      font-size: 1.75rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .about-content {
      padding: 2rem 0;
    }

    .about-grid {
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .glass-card h2 {
      font-size: 1.1rem;
      margin-bottom: 0.75rem;
    }

    .bio-section p {
      font-size: 0.95rem;
      margin-bottom: 0.75rem;
    }

    .cert-icon svg {
      width: 32px;
      height: 32px;
    }

    .cert-info h3 {
      font-size: 1rem;
    }

    .cert-info p {
      font-size: 0.85rem;
    }

    .timeline-content h3 {
      font-size: 0.95rem;
    }

    .timeline-content p {
      font-size: 0.85rem;
    }

    .skill-category h3 {
      font-size: 0.9rem;
      margin-bottom: 0.75rem;
    }

    .skill-badges {
      gap: 0.5rem;
    }
  }
</style>
