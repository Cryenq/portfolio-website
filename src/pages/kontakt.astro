<style>
  main {
    padding-top: 72px;
    min-height: 100vh;
  }

  .contact-hero {
    padding: 4rem 0;
    text-align: center;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
  }

  .contact-hero h1 {
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-muted);
  }

  .contact-content {
    padding: 4rem 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  /* Contact Cards */
  .contact-cards {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-card {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    text-decoration: none;
    color: inherit;
  }

  .contact-card:hover {
    transform: translateY(-4px);
  }

  .card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: var(--accent-gradient);
    border-radius: 16px;
    color: white;
    flex-shrink: 0;
  }

  .contact-card h3 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
    color: var(--text-primary);
  }

  .contact-card p {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0;
  }

  /* Contact Info */
  .contact-info h2 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .contact-info h2:not(:first-child) {
    margin-top: 1.5rem;
  }

  .contact-info p {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    main {
      padding-top: 80px;
    }

    .contact-hero {
      padding: 3rem 0;
    }

    .subtitle {
      font-size: 1.1rem;
    }

    .contact-content {
      padding: 2.5rem 0;
    }

    .contact-card {
      gap: 1rem;
    }

    .card-icon {
      width: 56px;
      height: 56px;
      border-radius: 14px;
    }

    .card-icon svg {
      width: 28px;
      height: 28px;
    }
  }

  @media (max-width: 480px) {
    main {
      padding-top: 70px;
    }

    .contact-hero {
      padding: 2rem 0;
    }

    .contact-hero h1 {
      font-size: 1.75rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .contact-content {
      padding: 2rem 0;
    }

    .contact-cards {
      gap: 0.75rem;
    }

    .contact-card {
      padding: 1.25rem;
      gap: 0.875rem;
    }

    .card-icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
    }

    .card-icon svg {
      width: 24px;
      height: 24px;
    }

    .contact-card h3 {
      font-size: 1rem;
    }

    .contact-card p {
      font-size: 0.85rem;
    }

    .contact-info {
      padding: 1.25rem;
    }

    .contact-info h2 {
      font-size: 0.95rem;
    }

    .contact-info h2:not(:first-child) {
      margin-top: 1.25rem;
    }

    .contact-info p {
      font-size: 0.9rem;
    }
  }
</style>
