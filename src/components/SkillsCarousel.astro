---

<div class="skills-carousel">
  <div class="carousel-track">
    {
      duplicatedSkills.map((skill) => (
        <div class="carousel-item">
          <span
            class="item-icon"
            set:html={icons[skill.icon] || icons.terminal}
          />
          <span class="item-label">{skill.label}</span>
        </div>
      ))
    }
  </div>
</div>

<style>
  .skills-carousel {
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 5%,
      black 95%,
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 5%,
      black 95%,
      transparent 100%
    );
    user-select: none;
    pointer-events: none;
  }

  .carousel-track {
    display: flex;
    gap: 2.5rem;
    animation: scroll 25s linear infinite;
    width: max-content;
  }

  .carousel-item {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.5rem 1rem;
    background: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border: 1px solid var(--glass-border);
    border-radius: 10px;
    opacity: 0.5;
    flex-shrink: 0;
  }

  .item-icon {
    display: flex;
    width: 20px;
    height: 20px;
    color: var(--accent-primary);
  }

  .item-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .item-label {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-secondary);
    white-space: nowrap;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .carousel-track {
      gap: 1.5rem;
      animation-duration: 18s;
    }

    .carousel-item {
      padding: 0.4rem 0.8rem;
    }

    .item-icon {
      width: 16px;
      height: 16px;
    }

    .item-label {
      font-size: 0.75rem;
    }
  }
</style>
